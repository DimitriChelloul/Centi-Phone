{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["../../domain/src/*"]
    },
    "rootDir": "./src",
    "outDir": "../dist",
    "skipLibCheck": true,
    "composite": true,
    "tsBuildInfoFile": "../dist/dal/.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "types/**/*",
     "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../domain" }
  ]
}
