{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "../dist",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@bll/*": ["../../bll/src/*"],
      "@dal/*": ["../../dal/src/*"],
      "@domain/*": ["../../domain/src/*"],
      "@utils/*": ["../utils/*"]
    },
    "tsBuildInfoFile": "../dist/api/.tsbuildinfo"
  },
  "include": ["src/**/*",
"src/types/**/*.d.ts",
"types/**/*", 
"src/**/*",
"utils/**/*"],
  "exclude": ["node_modules", "../dist"],
  "references": [
    { "path": "../bll" }
  ]
}
